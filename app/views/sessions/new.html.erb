<h1>Login</h1>
<br>
<%= form_tag session_path do %>
    <div>
      <%= label_tag 'login-label', 'Login' %><br/>
      <%= text_field_tag 'login' %>
    </div>
    <br>
    <div>
      <%= label_tag 'password', 'Password' %><br/>
      <%= password_field_tag 'password' %><br/><br/>
    </div>
    <div>
      <%= submit_tag "Login", id: "login-button" %> |
      <%= link_to 'Back', root_path %>
    </div>
<% end %>
