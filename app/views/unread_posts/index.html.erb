<p id="notice"><%= notice %></p>

<h1>Unread Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Content</th>
      <th>Parent post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unread_posts.each do |unread_post| %>
      <tr>
        <td><%= unread_post.title %></td>
        <td><%= unread_post.author %></td>
        <td><%= unread_post.content %></td>
        <td><%= unread_post.parent_post %></td>
        <td><%= link_to 'Show', unread_post %></td>
        <td><%= link_to 'Edit', edit_unread_post_path(unread_post) %></td>
        <td><%= link_to 'Destroy', unread_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Unread Post', new_unread_post_path %>
